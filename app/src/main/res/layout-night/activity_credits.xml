<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/fireWorks"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        app:lottie_fileName="fireworks_two.json"
        app:lottie_autoPlay="false"
        app:lottie_loop="true"
        android:visibility="gone" />

    <ScrollView
        android:layout_centerInParent="true"
        android:id="@+id/scrollView"
        android:layout_width="300dp"
        android:layout_height="300dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/creditsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:scrollbars="none"
                android:text="@string/greeting"
                android:textAlignment="center" />
            <Button
                android:id="@+id/startFireworksButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/start_fireworks"
                android:backgroundTint="@color/black"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:visibility="visible" />
        </LinearLayout>
    </ScrollView>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/fireWorks2"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentBottom="true"
        app:lottie_fileName="fireworks.json"
        app:lottie_autoPlay="false"
        app:lottie_loop="true"
        android:visibility="gone" />
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/fireWorks3"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerInParent="true"
        app:lottie_fileName="fireworks.json"
        app:lottie_autoPlay="false"
        app:lottie_loop="true"
        android:visibility="gone" />
</RelativeLayout>